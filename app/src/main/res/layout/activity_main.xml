<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado1"
            android:onClick="clickQuadrado"
            android:enabled="false"/>



        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado2"
            android:enabled="false"
            android:onClick="clickQuadrado"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado3"
            android:enabled="false"
            android:onClick="clickQuadrado"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado4"
            android:enabled="false"
            android:onClick="clickQuadrado"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado5"
            android:enabled="false"
            android:onClick="clickQuadrado"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado6"
            android:enabled="false"
            android:onClick="clickQuadrado"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado7"
            android:enabled="false"
            android:onClick="clickQuadrado"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado8"
            android:enabled="false"
            android:onClick="clickQuadrado"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tag="quadrado9"
            android:enabled="false"
            android:onClick="clickQuadrado"/>

    </LinearLayout>

    <Button
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:tag="quadrado9"
        android:onClick="newGame"
        android:text="Play"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/rbx" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:id="@+id/rbo" />
    </RadioGroup>
</LinearLayout>
